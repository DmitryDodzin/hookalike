{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "baseUrl": "./",
    "outDir": "./build",

    "strict": true,
    "allowJs": false,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": [
    "lib/**/*^(\\.spec).ts",
    "index.ts"
  ]
}
